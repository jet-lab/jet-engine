{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types", "types"],
    "stripInternal": true
  },
  "include": ["types/**/*", "src/**/*"]
}
